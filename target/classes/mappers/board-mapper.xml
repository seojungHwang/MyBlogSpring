<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.nh.mapper.BoardMapper">

    <select id="boardList" resultType="boardDto">
        select
        @rownum:=@rownum+1 as page_no,board.*
        from
        (
        select * from board
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="searchType=='title' and keyword != null and keyword != '' ">
                AND title like CONCAT('%', #{keyword}, '%')
            </if>
            <if test="searchType=='content' and keyword != null and keyword != '' ">
                AND content like CONCAT('%', #{keyword}, '%')
            </if>
            <if test="searchType=='id' and keyword != null and keyword != '' ">
                AND id like CONCAT('%', #{keyword}, '%')
            </if>
        </trim>
        order by board_date desc
        ) as board,
        (select @rownum:=0) temp
        limit #{offset},#{limit};
    </select>

    <insert id="insertBoard" parameterType="BoardDto">
        INSERT INTO board(id,
                          title,
                          content)
        values (#{id},
                #{title},
                #{content})
    </insert>

    <select id="getBoardContents" parameterType="java.lang.Integer" resultType="com.nh.dto.BoardDto">
        select *
        from board
        where num = #{num}
    </select>

    <update id="updateBoard" parameterType="BoardDto">
        UPDATE board
        SET title=#{title},
            content=#{content},
            id=#{id},
            board_update=now()
        WHERE num = #{num}

    </update>

    <delete id="getBoardDelete" parameterType="java.lang.Integer">
    <![CDATA[
        delete
        from board
        where num = #{num}
        ]]>
    </delete>

    <select id="totalBoardCount" resultType="integer" parameterType="BoardDto">
        select count(*) cnt from board
        <trim prefix="where" prefixOverrides="AND|OR">
            <if test="searchType=='title' and keyword != null and keyword != '' ">
                AND title like CONCAT('%', #{keyword}, '%')
            </if>
            <if test="searchType=='content' and keyword != null and keyword != '' ">
                AND content like CONCAT('%', #{keyword}, '%')
            </if>
            <if test="searchType=='id' and keyword != null and keyword != '' ">
                AND id like CONCAT('%', #{keyword}, '%')
            </if>
        </trim>
    </select>

</mapper>